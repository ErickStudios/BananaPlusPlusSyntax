{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Banana++",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#params"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#OptionalKeywords"
		},
		{
			"include": "#ClassesDefOrUsage"
		},
		{
			"name": "storage.type.cs",
			"match": "(?<=\\w+:)\\s*\\w+"
		},
		{
			"name": "storage.type.cs",
			"match": "(?<=\\.\\.\\.:)\\s*\\w+"
		},
		{
			"include": "#DefaultClasses"
		},
		{
			"name": "variable",
			"match": "\\w+"
		}
	],
	"repository": {
		"DefaultClasses" : {
			"comment": "clases que vienen ya por defecto en el lenguaje Banana++",
			"name" : "entity.name.class.bananaplusplus",
			"match": "\\b(Sys|Lang|require|delete)\\b"
		},
		"OptionalKeywords" : {
			"comment": "estas palabras clave son opcionales en el lenguaje y estandart, por lo que se colorean en este formato, aunque pueden no estar dependiendo de la desicion de que librerias usara el desarrollador",
			"name": "keyword.other",
			"match": "\\b(const)\\b"
		},
		"ClassesDefOrUsage": {
			"comment": "el uso de las clases",
			"name" : "entity.name.class.bananaplusplus",
			"match": "\\b\\w+(?=\\.new\\()"
		},
		"functions": {
			"name": "entity.name.function.bananaplusplus",
			"match": "\\b\\w+(?=\\()"
		},
		"params" : {
			"name": "variable.parameter.bananaplusplus",
			"begin": "%{",
			"end": "}%"
		},
		"multiline_comments":{
			
		},
		"comments":{
			"name": "comment.line.bananaplusplus",
			"begin": "//",
			"end": "\n",
			"patterns": [
				{
				"name": "storage.type.cs",
				"match": "(?<=:)\\s*\\w+"
				},
				{
					"name": "storage.type.cs",
					"match": "\\w+(?=:\\s*\\w+)"
				},
				{
					"name": "storage.type.cs",
					"match": "(?<=\\.\\.\\.:)\\s*\\w+"
				},
				{
					"name":"comment.block.documentation.bananaplusplus",
					"begin": "\\(\\(\\(",
					"end": "\\)\\)\\)",
					"patterns": [
						{
						"name": "storage.type.cs",
						"match": "(?<=\\w+:)\\s*\\w+"
						},		
						{
							"name": "variable",
							"match": "\\w+(?=:\\s*\\w+)"
						},
						{
							"name": "storage.type.cs",
							"match": "(?<=\\.\\.\\.:)\\s*\\w+"
						}
					]
				}
			]
		},
		"keywords": {
			"comment": "las palabras clave",
			"patterns": [{
				"name": "keyword.control.bananaplusplus",
				"match": "\\b(function|import|for|if|else|then|out|Sys|return)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.bananaplusplus",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.bananaplusplus",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"name" : "constant.numeric.bananaplusplus",
			"match": "-?\\b\\d+(\\.\\d+)?\\b"
		}
	},
	"scopeName": "source.bpp"
}